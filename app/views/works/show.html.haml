%main#main
  %section.section
    .container
      .row.mb-4.align-items-center
        .col-md-6{"data-aos" => "fade-up"}
          %h2=@work.title
          %p
            release: #{@work.release.try(:year)}
            %br
            director:
            =link_to "#{@work.director.name}", director_path(@work.director)
            %br
            =link_to "Edit", edit_work_path(@work), class: "btn btn-outline-info"
            =link_to "Delete", work_path(@work), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-secondary"
    .site-section.pb-0
      .container
        .row.align-items-stretch
          .col-md-8{"data-aos" => "fade-up"}
            -# %img.img-fluid{:alt => "Image", :src => "/img/img_1_big.jpg"}/
            =image_tag @work.image_url, class: 'img-fluid'
          .col-md-3.ml-auto{"data-aos" => "fade-up", "data-aos-delay" => "100"}
            .sticky-content
              %h3.h3=@work.title
              %p.mb-4
                %span.text-muted=@work.release.try(:year)
              .mb-5
                %p
                  =@work.description
              %h4.h4.mb-3 Director
              %ul.list-unstyled.list-line.mb-5
                =link_to "#{@work.director.name}", director_path(@work.director)


    .site-section.pb-0
      .container
        .row.justify-content-center.text-center.mb-4
