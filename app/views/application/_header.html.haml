#main-navbar.collapse.navbar-collapse.custom-navmenu
  .container.py-2.py-md-5
    .row.align-items-start
      .col-md-2
        %ul.custom-menu
          .filters
            -# %li.active
              -# %a{:href => "index.html"} Movie
            %li
              =link_to "Movie", works_path
            %li
              =link_to "Director", directors_path
            %li
            %br
            -if user_signed_in?
              %li
                = link_to 'My page', edit_login_profile_path
              %li
                = link_to 'Logout', destroy_user_session_path
            -else
              %li
                =link_to "Sign Up", new_user_registration_path
              %li
                =link_to "Login", new_user_session_path
      .col-md-4.d-none.d-md-block.mr-auto
        .tweet.d-flex
          %span.text-white.mt-2.mr-3
          %div
            %p
              %em
                Find your favorite movies. And add your favorite movie you can't find and make your own movie list!
                %br/
      -if user_signed_in? && current_user.profile.try(:image).present?
        .col-md-6.d-none.d-md-block
          .testimonial-wrap
            .testimonial
              =image_tag current_user.profile.image_url(:thumb), class: 'img-fluid'
              %blockquote
              %h3=current_user.profile.full_name
              %p
                =current_user.profile.introduction
%nav.navbar.navbar-light.custom-navbar
